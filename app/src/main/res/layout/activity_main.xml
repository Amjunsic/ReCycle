<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Question_One"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                             알고싶은 분리수거 영역를 고르십시오"
        />

    <Button
        android:id="@+id/Btn_Plastic"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="플라스틱"
        />

    <Button
        android:id="@+id/Btn_Box"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="상자" />

    <Button
        android:id="@+id/Btn_Styrofoam"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="스타이로폼"
        />

    <Button
        android:id="@+id/Btn_Glass"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="유리"
        />

    <Button
        android:id="@+id/Btn_Can_Steel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="캔/철"
        />

    <Button
        android:id="@+id/Btn_PlasticBag"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="비닐"
        />
</TableLayout>